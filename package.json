{
  "name": "poke-stack-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:poke-stack-angular": "node dist/poke-stack-angular/server/server.mjs",
    "generate:icon-sprite": "node tools/generate-sprite.mjs",
    "generate:icon-types": "node tools/generate-icon-types.mjs",
    "generate:icons": "npm run generate:icon-sprite && npm run generate:icon-types"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "yarn@1.22.15",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-server": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@angular/ssr": "^21.1.4",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^3.5.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "jsdom": "^27.1.0",
    "sass": "^1.97.3",
    "svg-sprite": "^2.0.4",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
